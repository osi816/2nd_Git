<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace = "kr.co.board.mapper.BoardMapper">

	<resultMap id="boardMap" type="board">
		<result column="no" property="no"/>
		<result column="title" property="title"/>
		<result column="writer" property="writer"/>
		<result column="content" property="content"/>
		<result column="reg_date" property="regDate"/>
		<result column="view_cnt" property="viewCnt"/>
	</resultMap>
	
	<resultMap id="commentMap" type="comment">
		<result column="comment_no" property="cno"/>
		<result column="no" property="no"/>
		<result column="writer" property="writer"/>
		<result column="content" property="content"/>
		<result column="reg_date" property="regDate"/>
	</resultMap>

	<select id = "selectBoard" resultMap = "boardMap">
		select *
		  from tb_board
		 order by no desc
	</select>

	<select id="selectBoardByNo" parameterType="int" resultMap = "boardMap">
		select *
		  from tb_board
		 where no = #{no}
	</select>
	
	
	<insert id="insertBoard" parameterType="board">
		insert into tb_board(
			no,
			title,
			writer,
			content
		)values (
			s_board_no.nextval,
			#{title},
			#{writer},
			#{content}
		)
	</insert>
	
	<update id="updateBoard" parameterType="board">
		update tb_board
		   set title = #{title},
			   content = #{content}
		 where no = #{no}
	</update>
	
	<delete id="deleteBoard" parameterType="int">
		delete 
		  from tb_board
		 where no = #{no}
	</delete>
	
	<update id="updateBoardViewCnt" parameterType="int">
		update tb_board
		   set view_cnt = view_cnt + 1
		 where no = #{no}
	</update>
	
	<insert id="insertComment" parameterType="comment">
		insert into tb_comment(
			comment_no,
			no,
			writer,
			content
		)values(
			s_comment_no.nextval,
			#{no},
			#{writer},
			#{content}
		)
	</insert>
	
	<select id="selectComment" parameterType="int"  resultMap="commentMap">
		select writer, content, reg_date
		  from tb_comment
		 where no = #{no}
		 order by comment_no desc
	</select>
	
	<update id="updateComment" parameterType="comment">
		update tb_comment
		   set content = #{content}
		 where (no = #{no}) and (comment_no = #{commentno})
	</update>
	<delete id="deleteComment" parameterType="int">
		delete
		  from tb_comment
		 where (no = #{no}) and (comment_no = #{commentno})
	</delete>
</mapper>
