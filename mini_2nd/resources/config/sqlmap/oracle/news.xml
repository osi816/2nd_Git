<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace = "kr.co.bitnews.mapper.NewsMapper">

	<resultMap id="newsMap" type="news">
		<result column="news_seq" property="newsSeq"/>
		<result column="news_id" property="newsId"/>
		<result column="user_id" property="userId"/>
	</resultMap>
	
	<resultMap id="newsimgMap" type="newsimg">
		<result column="day" property="day"/>
		<result column="news_id" property="newsId"/>
		<result column="user_id" property="userId"/>
	</resultMap>

	<insert id="insertNews" parameterType="news">
		insert into tb_news(
			news_seq,
			news_id,
			user_id
		)values(
			s_tb_news_seq.nextval,
			#{newsId},
			#{userId}
		)
	</insert>
	
	<delete id="deleteNews" parameterType="int">
		delete tb_news
		 where news_id = #{newsId}
	</delete>
	
	<select id="selectNewsByUser" parameterType="string" resultType="int">
		select news_id
		  from tb_news
		 where user_id = #{userId}
	</select>
	
	<select id="selectNewsImgByid" parameterType="string" resultMap="newsimgMap">
		select *
		  from tb_news_img
		 where user_id = #{userId}
	</select>
</mapper>
