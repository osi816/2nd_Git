<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace = "kr.co.bitnews.mapper.FreeBoardMapper">

	<resultMap id="boardMap" type="board">
		<result column="no" property="no"/>
		<result column="title" property="title"/>
		<result column="user_id" property="userId"/>
		<result column="content" property="content"/>
		<result column="reg_date" property="regDate"/>
		<result column="view_cnt" property="viewCnt"/>
	</resultMap>
	
	<select id="selectById" resultMap = "boardMap" parameterType="string">
	    select *
	      from tb_freeboard
	     where user_id = #{userId}
	</select>
	
	<select id = "selectBoard" resultMap = "boardMap">
		select *
		  from tb_freeboard
		 order by no desc
	</select>

	<select id="selectBoardByNo" parameterType="int" resultMap = "boardMap">
		select *
		  from tb_freeboard
		 where no = #{no}
	</select>
	
	<insert id="insertBoard" parameterType="board">
		insert into tb_freeboard(
			no,
			title,
			user_id,
			content
		)values (
			s_freeboard_no.nextval,
			#{title},
			#{userId},
			#{content}
		)
	</insert>
	
	<update id="updateBoard" parameterType="board">
		update tb_freeboard
		   set title = #{title},
			   content = #{content}
		 where no = #{no}
	</update>
	
	<delete id="deleteBoard" parameterType="int">
		delete 
		  from tb_freeboard
		 where no = #{no}
	</delete>
	
	<update id="updateBoardViewCnt" parameterType="int">
		update tb_freeboard
		   set view_cnt = view_cnt + 1
		 where no = #{no}
	</update>
	
	<resultMap id="commentMap" type="comment">
		<result column="comment_no" property="commentNo"/>
		<result column="no" property="no"/>
		<result column="user_id" property="userId"/>
		<result column="content" property="content"/>
		<result column="reg_date" property="regDate"/>
	</resultMap>

	<select id="selectCommentByNo" parameterType="int"  resultMap="commentMap">
		select *
		  from tb_freeboard_cmt
		 where no = #{no}
		 order by comment_no asc
	</select>
	
	<insert id="insertComment" parameterType="comment">
		insert into tb_freeboard_cmt(
			comment_no, no, user_id, content
		)values(
			s_freeboard_no.nextval, #{no}, #{userId}, #{content}
		)
	</insert>
	
	<update id="updateComment" parameterType="comment">
		update tb_freeboard_cmt
		   set content = #{content}
		 where comment_no = #{commentNo}
		 
	</update>
	<delete id="deleteComment" parameterType="int">
		delete
		  from tb_freeboard_cmt
		 where comment_no = #{commentNo}
	</delete>
	
		<!-- 첨부파일 파트 시작 -->
	
	<resultMap id="boardFileMap" type="boardFile">
		<result column="file_no" property="fileNo" />
		<result column="no" property="no" />
		<result column="file_path" property="filePath" />
		<result column="ori_name" property="oriName" />
		<result column="system_name" property="systemName" />
		<result column="file_size" property="fileSize" />
	</resultMap>
	
	<insert id="insertBoardFile" parameterType="boardFile">
		insert into tb_freeboard_file (
			file_no, no, file_path, ori_name, system_name, file_size
		) values (
			s_board_file_no.nextval, #{no}, #{filePath}, #{oriName}, #{systemName}, #{fileSize}		
		)
	</insert> 
	
	<select id="selectBoardFileByNo" parameterType="int" resultMap="boardFileMap">
		select *
		  from tb_freeboard_file
		 where no = #{no} 
	</select>
	
</mapper>
